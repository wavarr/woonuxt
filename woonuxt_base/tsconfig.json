{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "@nuxt/schema",
      "@nuxtjs/i18n",
      "@nuxt/image",
      "nuxt-graphql-client"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#app": ["./.nuxt/app.d.ts"],
      "#gql": ["./.nuxt/gql/default"],
      "#components": ["./app/components"],
      "#composables": ["./app/composables"]
    },
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": [
    "./.nuxt/nuxt.d.ts",
    "./app/**/*",
    "./nuxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
