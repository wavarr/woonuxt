{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@nuxt/image",
      "nuxt-graphql-client"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#app": ["./.nuxt/app.d.ts"],
      "#gql": ["./.nuxt/gql/default"]
    },
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": [
    "./.nuxt/nuxt.d.ts",
    "./app/**/*"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
